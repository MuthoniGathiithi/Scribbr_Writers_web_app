<div class="row">
  <div class="col-md-3 mb-4">
    <div class="card border-0 shadow-sm rounded-xl">
      <div class="card-body text-center">
        <div class="mb-3">
          <img src="https://via.placeholder.com/100x100" alt="Profile" class="rounded-circle">
        </div>
        <h5 class="card-title"><%= user.name %></h5>
        <p class="card-text text-muted"><%= user.email %></p>
        <div class="d-grid">
          <a href="/users/profile" class="btn btn-outline-primary shadow-hover"><i class="fas fa-user-edit me-2"></i>Edit Profile</a>
        </div>
      </div>
    </div>
    
    <div class="card border-0 shadow-sm rounded-xl mt-4">
      <div class="card-header bg-white">
        <h5 class="mb-0">Quick Links</h5>
      </div>
      <div class="list-group list-group-flush">
        <a href="/dashboard" class="list-group-item list-group-item-action active">
          <i class="fas fa-tachometer-alt me-2"></i> Dashboard
        </a>
        <a href="/dashboard/training" class="list-group-item list-group-item-action">
          <i class="fas fa-graduation-cap me-2"></i> Training
        </a>
        <a href="/payments" class="list-group-item list-group-item-action">
          <i class="fas fa-credit-card me-2"></i> Payment
        </a>
        <% if(user.paymentStatus === 'completed') { %>
          <a href="/dashboard/assignments" class="list-group-item list-group-item-action">
            <i class="fas fa-tasks me-2"></i> Assignments
          </a>
        <% } %>
      </div>
    </div>
  </div>
  
  <div class="col-md-9">
    <div class="card border-0 shadow-sm rounded-xl mb-4">
      <div class="card-body">
        <h4 class="card-title">Welcome, <%= user.name %>!</h4>
        <p class="card-text">
          <% if(user.paymentStatus === 'completed') { %>
            Your account is fully activated. You can now access writing assignments.
          <% } else { %>
            Complete the onboarding steps below to activate your account and access writing assignments.
          <% } %>
        </p>
      </div>
    </div>
    
    <div class="card border-0 shadow-sm rounded-xl mb-4">
      <div class="card-header bg-white">
        <h5 class="mb-0">Onboarding Progress</h5>
      </div>
      <div class="card-body">
        <div class="progress mb-3" style="height: 10px;">
          <div class="progress-bar bg-success" role="progressbar" style="width: <%= progress %>%;" aria-valuenow="<%= progress %>" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
        <p class="text-muted text-center"><%= progress %>% completed</p>
        
        <div class="list-group">
          <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
            <div>
              <h6 class="mb-1">Complete Your Profile</h6>
              <p class="mb-0 text-muted small">Update your personal information</p>
            </div>
            <% if(user.onboardingSteps.profileCompleted) { %>
              <span class="badge bg-success rounded-pill"><i class="fas fa-check"></i></span>
            <% } else { %>
              <a href="/users/profile" class="btn btn-sm btn-primary shadow-hover"><i class="fas fa-user-edit me-1"></i> Complete</a>
            <% } %>
          </div>
          
          <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
            <div>
              <h6 class="mb-1">Complete Training</h6>
              <p class="mb-0 text-muted small">Learn about our writing standards</p>
            </div>
            <% if(user.onboardingSteps.trainingCompleted) { %>
              <span class="badge bg-success rounded-pill"><i class="fas fa-check"></i></span>
            <% } else { %>
              <a href="/dashboard/training" class="btn btn-sm btn-primary shadow-hover"><i class="fas fa-play me-1"></i> Start</a>
            <% } %>
          </div>
          
          <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
            <div>
              <h6 class="mb-1">Make Payment</h6>
              <p class="mb-0 text-muted small">Pay registration fee via M-Pesa</p>
            </div>
            <% if(user.onboardingSteps.paymentSubmitted) { %>
              <% if(user.paymentStatus === 'completed') { %>
                <span class="badge bg-success rounded-pill"><i class="fas fa-check"></i></span>
              <% } else { %>
                <span class="badge bg-warning text-dark rounded-pill">Pending</span>
              <% } %>
            <% } else { %>
              <a href="/payments" class="btn btn-sm btn-primary shadow-hover"><i class="fas fa-credit-card me-1"></i> Pay Now</a>
            <% } %>
          </div>
        </div>
      </div>
    </div>
    
    <% if(user.paymentStatus === 'completed') { %>
      <div class="card border-0 shadow-sm rounded-xl mb-4">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
          <h5 class="mb-0">Recent Assignments</h5>
          <a href="/dashboard/assignments" class="btn btn-sm btn-primary shadow-hover"><i class="fas fa-list me-1"></i> View All</a>
        </div>
        <div class="card-body">
          <div class="list-group">
            <a href="/dashboard/assignments" class="list-group-item list-group-item-action">
              <div class="d-flex w-100 justify-content-between">
                <h6 class="mb-1">Blog Post: 10 Tips for Effective Writing</h6>
                <small class="text-muted">7 days left</small>
              </div>
              <p class="mb-1 text-muted small">Write a 1000-word blog post about effective writing techniques.</p>
              <small class="text-success">Available</small>
            </a>
            <a href="/dashboard/assignments" class="list-group-item list-group-item-action">
              <div class="d-flex w-100 justify-content-between">
                <h6 class="mb-1">Product Description: Smart Home Device</h6>
                <small class="text-muted">5 days left</small>
              </div>
              <p class="mb-1 text-muted small">Write a compelling 500-word product description for a new smart home device.</p>
              <small class="text-success">Available</small>
            </a>
          </div>
        </div>
      </div>
    <% } else { %>
      <div class="card border-0 shadow-sm rounded-xl mb-4 bg-light">
        <div class="card-body text-center p-5">
          <i class="fas fa-lock fa-4x text-gradient mb-3"></i>
          <h4>Assignments Locked</h4>
          <p class="text-muted">Complete the onboarding steps and payment to unlock writing assignments.</p>
          <a href="/payments" class="btn btn-primary shadow-hover"><i class="fas fa-credit-card me-2"></i>Make Payment</a>
        </div>
      </div>
    <% } %>
  </div>
</div>
